<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>

    <logger name="org.testcontainers" level="DEBUG"/>
    <logger name="com.github.dockerjava" level="WARN"/>

    <!-- see https://github.com/testcontainers/testcontainers-java/issues/3093#issuecomment-927086344 -->
    <logger name="com.github.dockerjava.api.command.BuildImageResultCallback" level="DEBUG"/>
</configuration>